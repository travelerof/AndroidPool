<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0_5"
        android:background="@color/color_cccccc"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_35"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/log_priority_tv"
            android:layout_width="@dimen/dimen_80"
            android:layout_height="match_parent"
            android:textSize="@dimen/textsize_10"
            android:textColor="@color/color_333333"
            android:text="@string/verbose"
            android:gravity="center"
            android:background="@color/color_e5e5e5"/>
        <View
            android:layout_width="@dimen/dimen_0_5"
            android:layout_height="match_parent"
            android:background="@color/color_cccccc"/>
        <EditText
            android:id="@+id/log_keyword_search_et"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="@dimen/textsize_10"
            android:textColor="@color/color_333333"
            android:background="@null"
            android:gravity="center_vertical"
            android:drawableLeft="@mipmap/ic_log_search"
            android:drawablePadding="@dimen/dimen_5"
            android:paddingLeft="@dimen/dimen_10"
            android:paddingRight="@dimen/dimen_10"
            android:hint="请输入"/>
        <View
            android:layout_width="@dimen/dimen_0_5"
            android:layout_height="match_parent"
            android:background="@color/color_cccccc"/>
        <TextView
            android:id="@+id/log_clear_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/textsize_10"
            android:textColor="@color/color_333333"
            android:text="@string/clear"
            android:gravity="center"
            android:paddingLeft="@dimen/dimen_15"
            android:paddingRight="@dimen/dimen_15"
            android:background="@color/color_e5e5e5"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0_5"
        android:background="@color/color_cccccc"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/log_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/adapter_log_layout"/>
        <include layout="@layout/item_log_priority_layout"/>
    </FrameLayout>
</LinearLayout>