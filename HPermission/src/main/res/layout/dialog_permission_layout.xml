<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="@drawable/shape_permission_dialog">
    <ImageView
        android:id="@+id/dialog_permission_title_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_15"/>
    <TextView
        android:id="@+id/dialog_permission_message_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textsize_14"
        android:textColor="@android:color/black"
        android:layout_marginLeft="@dimen/dimen_20"
        android:layout_marginRight="@dimen/dimen_20"
        android:layout_marginTop="@dimen/dimen_15"
        android:layout_marginBottom="@dimen/dimen_15"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_30"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/dimen_15">
        <TextView
            android:id="@+id/dialog_permission_refuse_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/textsize_14"
            android:textColor="@color/color_3700B3"
            android:gravity="center"
            android:text="@string/refuse"/>
        <View
            android:layout_width="@dimen/dimen_0_5"
            android:layout_height="match_parent"
            android:background="@color/color_AAAAAA"/>
        <TextView
            android:id="@+id/dialog_permission_apply_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/textsize_14"
            android:textColor="@color/color_3700B3"
            android:gravity="center"
            android:text="@string/apply"/>
    </LinearLayout>
</LinearLayout>