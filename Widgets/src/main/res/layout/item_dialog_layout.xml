<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_dialog_default_bg"
    android:id="@+id/dialog_root_layout">
    <TextView
        android:id="@+id/dialog_title_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_dialog_title_height"
        android:gravity="center"
        android:textSize="@dimen/textsize_16"
        android:text="标题"/>
    <View
        android:id="@+id/dialog_title_line_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_default_line_height"
        android:background="@color/color_eeeeee"/>
    <FrameLayout
        android:id="@+id/dialog_message_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/dialog_message_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dimen_12"
            android:layout_marginBottom="@dimen/dimen_12"
            android:layout_marginLeft="@dimen/dimen_8"
            android:layout_marginRight="@dimen/dimen_8"
            android:textSize="@dimen/textsize_14" />
    </FrameLayout>
    <View
        android:id="@+id/dialog_bottom_line_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_default_line_height"/>
    <LinearLayout
        android:id="@+id/dialog_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_dialog_title_height"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/dialog_bottom_negation_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/textsize_14"/>
        <View
            android:id="@+id/dialog_bottom_positive_line"
            android:layout_width="@dimen/dimen_default_line_height"
            android:layout_height="match_parent"
            android:background="@color/color_eeeeee"/>
        <TextView
            android:id="@+id/dialog_bottom_positive_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/textsize_14"/>
    </LinearLayout>
</LinearLayout>