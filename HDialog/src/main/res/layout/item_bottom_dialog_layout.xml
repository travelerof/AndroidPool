<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/dialog_bottom_rootview_layout">
    <RelativeLayout
        android:id="@+id/dialog_bottom_title_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50">
        <TextView
            android:id="@+id/dialog_bottom_title_cancel_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/textsize_14"
            android:textColor="@color/color_555555"
            android:layout_alignParentLeft="true"
            android:paddingLeft="@dimen/dimen_10"
            android:paddingRight="@dimen/dimen_10"
            android:gravity="center"
            android:text="取消"/>

        <TextView
            android:id="@+id/dialog_bottom_title_ok_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/textsize_14"
            android:textColor="@color/color_555555"
            android:layout_alignParentRight="true"
            android:paddingLeft="@dimen/dimen_10"
            android:paddingRight="@dimen/dimen_10"
            android:gravity="center"
            android:text="取消"/>
        <TextView
            android:id="@+id/dialog_bottom_title_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/textsize_14"
            android:textColor="@color/color_555555"
            android:layout_toLeftOf="@id/dialog_bottom_title_ok_tv"
            android:layout_toRightOf="@id/dialog_bottom_title_cancel_tv"
            android:gravity="center"
            android:singleLine="true"
            android:text="标题"/>

    </RelativeLayout>
    <View
        android:id="@+id/dialog_bottom_title_line_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0_5"
        android:background="@color/color_eeeeee"/>
</LinearLayout>