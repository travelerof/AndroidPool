<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_45"
    android:gravity="center_vertical">
    <ImageView
        android:id="@+id/video_bottom_verical_play_iv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/dimen_10"
        android:paddingRight="@dimen/dimen_5"
        android:src="@mipmap/ic_play"/>
    <TextView
        android:id="@+id/video_bottom_verical_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textsize_12"
        android:textColor="@color/white"
        android:text="00:00"
        android:layout_marginLeft="@dimen/dimen_5"/>
    <SeekBar
        android:id="@+id/video_bottom_verical_seekbar"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:progressDrawable="@drawable/drawable_seekbar"
        android:thumb="@mipmap/ic_seekbar"/>
    <TextView
        android:id="@+id/video_bottom_verical_total_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textsize_12"
        android:textColor="@color/white"
        android:text="00:00"
        android:layout_marginRight="@dimen/dimen_5"/>
    <ImageView
        android:id="@+id/video_bottom_verical_screen_changed_iv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/dimen_5"
        android:paddingRight="@dimen/dimen_10"
        android:src="@mipmap/ic_screen_horizontal"/>
</LinearLayout>