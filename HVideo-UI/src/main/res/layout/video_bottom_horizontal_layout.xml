<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_30"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/video_bottom_horizontal_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize_12"
            android:textColor="@color/white"
            android:text="00:00"
            android:layout_marginLeft="@dimen/dimen_10"/>
        <SeekBar
            android:id="@+id/video_bottom_horizontal_seekbar"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:progress="30"
            android:progressDrawable="@drawable/drawable_seekbar"/>
        <TextView
            android:id="@+id/video_bottom_horizontal_total_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize_12"
            android:textColor="@color/white"
            android:text="00:00"
            android:layout_marginRight="@dimen/dimen_10"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_25">
        <ImageView
            android:id="@+id/video_bottom_horizontal_play_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/dimen_10"
            android:paddingRight="@dimen/dimen_5"
            android:src="@mipmap/ic_play"/>
    </LinearLayout>

</LinearLayout>